<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aashishsatya.waitforit" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewAlarm"
            android:label="@string/title_activity_new_alarm" >
        </activity>
        <activity
            android:name=".ConfirmDetails"
            android:label="@string/title_activity_confirm_details"
            android:parentActivityName=".NewAlarm" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aashishsatya.waitforit.NewAlarm" />
        </activity>
        <activity
            android:name=".SetAlarm"
            android:label="@string/title_activity_set_alarm"
            android:parentActivityName=".ConfirmDetails" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aashishsatya.waitforit.ConfirmDetails" />
        </activity>
    </application>

</manifest>
